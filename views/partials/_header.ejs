<!-- when you want to have this everywhere. -->

<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <div class="navbar-login">
        <% if (!name) { %>
          <form method="POST" action="/login">
          <label for="name">Logged in as: <%= name %></label>
          <input
            class="form-control"
            type="text"
            name="name"
            placeholder="username"
            style="width: 300px; margin: 1em"
          />
          <button type="submit" class="btn btn-primary">Login</button>
        </form>
        <form method="POST" action="/logout">
          <!-- <label for="logout">You are logged out.</label> -->
          <button type="submit" class="btn btn-primary">Logout</button>
        </form>

        <% } else { %>
           </form>
        <form method="POST" action="/logout">
          <!-- <label for="logout">You are logged out.</label> -->
          <button type="submit" class="btn btn-primary">Logout</button>
        </form>
        <% } %>
      </div>
    </div>
  </nav>
</header>
